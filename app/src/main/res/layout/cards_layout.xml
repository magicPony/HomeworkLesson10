<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_card"
        android:background="@android:color/holo_orange_dark"
        android:textSize="@dimen/text_size_AM"
        android:textStyle="bold|italic"
        android:padding="@dimen/padding_AM"
        android:layout_marginTop="@dimen/margin_top_AM"
        android:layout_marginBottom="@dimen/margin_bottom_AM"
        android:layout_marginLeft="@dimen/side_margin_AM"
        android:layout_marginRight="@dimen/side_margin_AM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>